{
    "name": "invoiceplane/ivplv2",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform-check": false,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require": {
        "php": "^8.1",
        "joshbrw/core-module": "*",
        "joshbrw/laravel-module-installer": "*",
        "laravel/framework": "^8.83.27",
        "mrabbani/laravel-module-manager": "*"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "mockery/mockery": "*",
        "phpunit/phpunit": "^9.6.10"
    },
    "autoload": {
        "psr-4": {
          "App\\": "app/",
          "Modules\\": "Modules/",
        "Database\\Factories\\": "database/factories/",
        "Database\\Seeders\\": "database/seeders/"
        }

    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "repositories": [
      {
      "type": "vcs",
      "url": "https://github.com/catchupmods/core-module"
      }
    ],
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "phpstan": [
            "phpstan analyse --memory-limit=500M"
        ],
        "test": [
            "phpunit --log-junit tests/Results/TEST-phpunit-junit.xml"
        ],
        "format": [
            "php-cs-fixer fix --allow-risky=yes --config=.php-cs-fixer.php"
        ]
    }
}
